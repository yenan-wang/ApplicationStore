<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/classify_imageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/game_secondFragment_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            android:text="Button1" />

        <Button
            android:id="@+id/game_secondFragment_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/game_secondFragment_button_one"
            android:background="#00000000"
            android:text="Button2" />

        <Button
            android:id="@+id/game_secondFragment_button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/game_secondFragment_button_two"
            android:background="#00000000"
            android:text="Button3" />

        <Button
            android:id="@+id/game_secondFragment_button_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_secondFragment_button_one"
            android:background="#00000000"
            android:text="Button4" />

        <Button
            android:id="@+id/game_secondFragment_button_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_secondFragment_button_two"
            android:layout_toRightOf="@+id/game_secondFragment_button_four"
            android:background="#00000000"
            android:text="Button5" />

        <Button
            android:id="@+id/game_secondFragment_button_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_secondFragment_button_three"
            android:layout_toRightOf="@+id/game_secondFragment_button_five"
            android:background="#00000000"
            android:text="Button6" />

    </RelativeLayout>

</LinearLayout>